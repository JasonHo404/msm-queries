<h1>List of Movies</h1>


<table border = "1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% Movie.all.each do |i| %>
    <tr>
      <td><%=i.id%></td>
      <td><img src="<%=i.image%>" alt="<%=i.title%> image" width ="100"></td>
      <td><%=i.title%></td>
      <td><%=i.year%></td>
      <td>
        <% d_records = Director.where({id: i.director_id })%>
        <%=d_records.at(0).name%>
      </td>
      <td>
        <a href="/movies/<%=i.id%>">Show Details</a>
      </td>
    </tr>

  


  <% end %>



</table>
